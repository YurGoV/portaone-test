{
  "openapi": "3.0.1",
  "info": {
    "title": "test API",
    "version": "v0.2"
  },
  "servers": [
    {
      "url": "https://portaone-test.yurgo.fun"
    },
    {
      "url": "http://localhost:3011"
    }
  ],
  "tags": [
    {
      "name": "Users API:",
      "description": "TEXT PARSER TO SEARCH FIRST UNIQUE LETTER"
    }
  ],
  "paths": {
    "/api/parser": {
      "post": {
        "summary": "route to receive text",
        "tags": ["Parser"],
        "description": "---------",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string",
                    "example": "C makes it easy for you to shoot yourself in the foot. C++ makes that harder, but when you do, it blows away your whole leg. (—Å) Bjarne Stroustrup"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "the first unique letter in given text is 'e'"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "\"text\" is required"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
